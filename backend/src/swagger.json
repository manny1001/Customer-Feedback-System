{
  "swagger": "2.0",
  "info": {
    "title": "Customer Feedback Management API",
    "description": "API for managing customer feedback",
    "version": "1.0.0"
  },
  "host": "localhost:5000",
  "basePath": "/api/v1",
  "schemes": ["http"],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "Register new admin user",
        "description": "Register new admin user",
        "parameters": [
          {
            "name": "username",
            "in": "body",
            "description": "admin username",
            "required": true,
            "schema": {
              "type": "string",
              "$ref": "#/definitions/Auth.username"
            }
          },
          {
            "name": "password",
            "in": "body",
            "description": "admin password",
            "required": true,
            "schema": {
              "type": "string",
              "$ref": "#/definitions/Auth.password"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Admin successfully added"
          }
        },
        "security": [
          {
            "bearerAuth": [],
            "apiKeyAuth": []
          }
        ]
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Login as admin",
        "description": "Login as admin",
        "parameters": [
          {
            "name": "username",
            "in": "body",
            "description": "admin username",
            "required": true,
            "schema": {
              "type": "string",
              "$ref": "#/definitions/Auth.username"
            }
          },
          {
            "name": "password",
            "in": "body",
            "description": "admin password",
            "required": true,
            "schema": {
              "type": "string",
              "$ref": "#/definitions/Auth.password"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Admin successfully added"
          }
        }
      }
    },
    "/feedback/create": {
      "post": {
        "tags": ["Feedback"],
        "summary": "Submit customer feedback",
        "description": "Submit customer feedback",
        "parameters": [
          {
            "in": "body",
            "name": "fullname",
            "description": "Name of customer submitting feedback",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Feedback.fullname"
            }
          },
          {
            "in": "body",
            "name": "message",
            "description": "Feedback/Message of customer",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Feedback.message"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Feedback successfully submitted"
          }
        }
      }
    },
    "/feedback/getall": {
      "get": {
        "tags": ["Feedback"],
        "summary": "Get all customer feedback",
        "description": "Get all customer feedback",
        "responses": {
          "200": {
            "description": "A list of customer feedback submitted",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Feedback"
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": [],
            "apiKeyAuth": []
          }
        ]
      }
    },
    "/admin/getall": {
      "get": {
        "tags": ["Admin"],
        "summary": "Get all admin users",
        "description": "Get all admin users",
        "responses": {
          "201": {
            "description": "Admin users returned"
          }
        },
        "security": [
          {
            "bearerAuth": [],
            "apiKeyAuth": []
          }
        ]
      }
    }
  },
  "definitions": {
    "Feedback": {
      "type": "string",
      "required": ["fullname,message"],
      "properties": {
        "fullname": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    },
    "Admin": {
      "type": "object",
      "required": ["name", "password", "isDeleted"],
      "properties": {
        "name": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "isDeleted": {
          "type": "string"
        }
      }
    },
    "Auth": {
      "type": "object",
      "required": ["username", "password"],
      "properties": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      },
      "apiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "x-api-key"
      }
    }
  }
}
