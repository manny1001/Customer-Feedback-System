{
  "swagger": "2.0",
  "info": {
    "title": "Customer Feedback Management API",
    "description": "API for managing customer feedback",
    "version": "1.0.0"
  },
  "host": "localhost:5000",
  "basePath": "/api/v1",
  "schemes": ["http"],
  "paths": {
    "/feedback": {
      "post": {
        "tags": ["Feedback"],
        "summary": "Submit customer feedback",
        "description": "Submit customer feedback",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Feedback to submit to admin",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Feedback"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Feedback successfully submitted"
          }
        }
      },
      "get": {
        "tags": ["Feedback"],
        "summary": "Get all feedback",
        "description": "Get all customer feedback",
        "responses": {
          "200": {
            "description": "A list of feedback",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Feedback"
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": [],
            "apiKeyAuth": []
          }
        ]
      }
    },
    "/feedback/{id}": {
      "get": {
        "tags": ["Feedback"],
        "summary": "Get feedback by feedback ID",
        "description": "Get feedback by feedback ID",

        "responses": {
          "200": {
            "description": "A list of feedback",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Feedback"
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": [],
            "apiKeyAuth": []
          }
        ]
      }
    },
    "/Admin": {
      "post": {
        "tags": ["Admin"],
        "summary": "Add new admin user",
        "description": "Add new admin user",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Admin user added",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Admin"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Admin successfully added"
          }
        }
      }
    }
  },
  "definitions": {
    "Feedback": {
      "type": "object",
      "required": ["fullname", "message"],
      "properties": {
        "fullname": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    },
    "Admin": {
      "type": "object",
      "required": ["name", "password", "isDeleted"],
      "properties": {
        "name": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "isDeleted": {
          "type": "string"
        }
      }
    },
    "Customer": {
      "type": "object",
      "required": ["name", "feedback"],
      "properties": {
        "name": {
          "type": "string"
        },
        "feedback": {
          "type": "string"
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      },
      "apiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "x-api-key"
      }
    }
  }
}
